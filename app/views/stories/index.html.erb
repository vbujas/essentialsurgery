
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Stories</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Showing 1 to 10
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th>Story Title</th>
              </tr>
            </thead>
            <tbody>
              <% @stories.each do |story| %>
              <tr class="<%= cycle('even', 'odd') %>">
             <td><%= link_to "#{story.title}", edit_story_path(story) %></td>
                <td><%= story.title  %></td>
                           
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
            <%= link_to "New Story", new_story_path() %></button>    
      </div>
      <!-- /.panel-body -->
    </div>
    <%= will_paginate @stories %>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->





