
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Cities</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Showing 1 to 10
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th>City Name</th>
                <th>Country</th>
                <th>Longitude</th>
                <th>Latitude</th>
                <th>Capital</th>   
              </tr>
            </thead>
            <tbody>
              <% @cities.each do |city| %>
              <tr class="<%= cycle('even', 'odd') %>">
                <td><%= link_to "#{city.name}", edit_city_path(city) %></td>
                <td><%=  city.country.name  %></td>
                <td><%= city.longitude  %></td>
                <td><%= city.latitude   %></td>
                <td><%= city.capital    %></td>            
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
        <%= link_to "New City", new_city_path() %></button>
      </div>
      <!-- /.panel-body -->
    </div>
    <%= will_paginate @cities %>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
