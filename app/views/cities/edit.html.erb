<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Update cities</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        City Details
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-8">
            <%= form_for @city do |c| %>
              <div class="row">
                <div class="col-md-3 form-group">
                  <%= c.label "Name" %>
                   <%= c.text_field :name, class: "form-control" %> 
                </div>
                <div class="col-md-3 form-group">
                  <%= c.label "Country" %>
                  <%= c.select(:country_id, Country.all.collect {|o| [o.name, o.id]}, { prompt: 'Select' }, { class: "form-control" }) %>
                </div>
                <div class="col-md-3 form-group">
                   <%= c.label "Latitude" %>
                   <%= c.text_field :latitude, class: "form-control" %> 
                </div>
                <div class="col-md-3 form-group">
                  <%= c.label "Longitude" %>
                   <%= c.text_field :longitude, class: "form-control" %> 
                </div>
              </div>
              <div class="form-group">

             
              <div class="row">
                <div class="col-md-6 form-group">
                  <%= c.label "Capital" %>
                  <%= c.select :capital, City::CAPITAL.invert, { prompt: 'Select' }, { class: "form-control" } %>
                </div>
                   <div class="col-md-3 form-group">
                   <%= c.label "Mapbox Object Id (District)" %>
                   <%= c.text_field :mapbox_obj_id, class: "form-control" %> 
                </div>
              </div>
  
              <%= c.submit "Update", class: "btn btn-primary" %>
              <button type="reset" class="btn btn-danger">Reset Changes</button>
              <% end %>
            </div>
            <!-- /.col-lg-6 (nested) -->
          </div>
          <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->

