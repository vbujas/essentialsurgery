<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Update User</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        User Details
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-8">
            <%= form_for @user do |c| %>
              <div class="row">
                <div class="col-md-3 form-group">
                  <%= c.label "USerame" %>
                   <%= c.text_field :username, class: "form-control" %> 
                </div>
                
                <div class="col-md-3 form-group">
                   <%= c.label "E-mail" %>
                   <%= c.text_field :email, class: "form-control" %> 
                </div>
                <div class="col-md-3 form-group">
                  <%= c.label "Role" %>
                    <%= c.select :role, User::ROLE.invert, { prompt: 'Select' }, { class: "form-control" } %>
                </div>
              </div>
              <div class="form-group">
 
              <%= c.submit "Update", class: "btn btn-primary" %>
              <button type="reset" class="btn btn-danger">Reset Changes</button>
              <% end %>
            </div>
            <!-- /.col-lg-6 (nested) -->
          </div>
          <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->

