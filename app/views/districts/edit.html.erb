<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Update Districts</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        District Details
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-8">
            <%= form_for @district do |d| %>
              <div class="row">
                <div class="col-md-3 form-group">
                  <%= d.label "Name" %>
                   <%= d.text_field :name, class: "form-control" %> 
                </div>
                
                <div class="col-md-3 form-group">
                   <%= d.label "Mapbox Object Id" %>
                   <%= d.text_field :mapbox_obj_id, class: "form-control" %> 
                </div>
                <div class="col-md-3 form-group">
                  <%= d.label "Population" %>
                  <%= d.text_field :est_population, class: "form-control" %> 
                </div>
              </div>
              <div class="row">
              	 <div class="col-md-3 form-group">
                  <%= d.label "Country" %>
                  <%= d.select(:country_id, Country.all.collect {|o| [o.name, o.id]}, { prompt: 'Select' }, { class: "form-control" }) %>
                </div>

              </div>
              <div class="form-group">
 
              <%= d.submit "Update", class: "btn btn-primary" %>
              <button type="reset" class="btn btn-danger">Reset Changes</button>
              <% end %>
            </div>
            <!-- /.col-lg-6 (nested) -->
          </div>
          <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->

