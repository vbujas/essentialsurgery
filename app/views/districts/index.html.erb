
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Districts</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Showing 1 to 10
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th>District Name</th>
                <th>Country</th>
                <th>Population</th>       
              </tr>
            </thead>
            <tbody>
              <% @districts.each do |district| %>
              <tr class="<%= cycle('even', 'odd') %>">
                <td><%= link_to "#{district.name}", edit_district_path(district) %></td>
                <td><%=  district.country.name  %></td>
                <td><%= district.est_population   %></td> 
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
    <%= will_paginate @districts %>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
