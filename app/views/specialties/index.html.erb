
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Specialties</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Showing 1 to 10
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th>Specialty Name</th>
                
              </tr>
            </thead>
            <tbody>
              <% @specialties.each do |specialty| %>
              <tr class="<%= cycle('even', 'odd') %>">
                <td><%= link_to "#{specialty.name}", edit_specialty_path(specialty) %></td>            
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
        <%= link_to "New Specialty", new_specialty_path() %></button>
      </div>
      <!-- /.panel-body -->
    </div>
    <%= will_paginate @specialties %>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
