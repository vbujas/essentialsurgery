
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Bugs</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Showing 1 to 10
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th>Bug Title</th>
                <th>Bug Text</th>
                <th>Name</th>
                <th>Email</th>
                  
              </tr>
            </thead>
            <tbody>
              <% @bugs.each do |bug| %>
              <tr class="<%= cycle('even', 'odd') %>">
                <td><%= bug.title %></td>
                <td><%=raw bug.text  %></td>
                <td><%= bug.name  %></td>
                <td><%= bug.email  %></td>            
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
    <%= will_paginate @bugs %>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
