
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Countries</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Showing 1 to 10
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th>Country Name</th>
                <th>Longitude</th>
                <th>Latitude</th>
                
              </tr>
            </thead>
            <tbody>
              <% @countries.each do |country| %>
              <tr class="<%= cycle('even', 'odd') %>">
                <td><%= link_to "#{country.name}", edit_country_path(country) %></td>  
                 <td><%=  country.longitude  %></td> 
                  <td><%=  country.latitude  %></td>        
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
        <%= link_to "New Country", new_country_path() %></button>
      </div>
      <!-- /.panel-body -->
    </div>
    <%= will_paginate @countries %>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

