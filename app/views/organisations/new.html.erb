<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">New Organisation</h1>
  </div>
<!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Organisation Details
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-8">
            <%= form_for @organisation do |org| %>
              <div class="row">
                <div class="col-md-3 form-group">
                  <%= org.label "Name" %>
                  <%= org.text_field :name, class: "form-control" %> 
                </div>
                
                <div class="col-md-3 form-group">
                   <%= org.label "Longitude" %>
                   <%= org.text_field :longitude, class: "form-control" %> 
                </div>
                <div class="col-md-3 form-group">
                  <%= org.label "Latitude" %>
                  <%= org.text_field :latitude, class: "form-control" %> 
                </div>
              </div>
              <div class="row">
              	 <div class="col-md-3 form-group">
                  <%= org.label "Training Hospital" %>
                  <%= org.select :training, Organisation::TRAINING.invert, { prompt: 'Select' }, { class: "form-control" } %>
                </div>

              </div>
              <div class="form-group">
              <%= org.submit "Create", class: "btn btn-primary" %>
              <button type="reset" class="btn btn-danger">Reset Changes</button>
              <% end %>
            </div>
            <!-- /.col-lg-6 (nested) -->
          </div>
          <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->