
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Surgeons</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Showing 1 to 10
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th>Full Name</th>
                <th>Organisation</th>
                <th>Country, City</th>
              </tr>
            </thead>
            <tbody>
              <% @doctors.each do |doctor| %>
              <tr class="<%= cycle('even', 'odd') %>">
                <td><%= link_to "#{doctor.first_name} #{doctor.last_name}", edit_doctor_path(doctor) %></td>
                <td><%= doctor.organisation.name if doctor.organisation %></td>
                <td><%= "#{doctor.country.name}, #{doctor.city.name}" if doctor.country && doctor.city %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
          <%= link_to "New Surgeon", new_doctor_path() %></button>
       
      <!-- /.panel-body -->
    </div>
    <%= will_paginate @doctors %>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
