<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Profile</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Profile Details
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-8">
            <%= form_for @doctor do |f| %>
              <div class="row">
                <div class="col-md-3 form-group">
                  <%= f.label "Title" %>
                  <%= f.select :title, Doctor::TITLE.invert, { prompt: 'Select' }, { class: "form-control" } %>
                </div>
                <div class="col-md-3 form-group">
                  <%= f.label "First Name" %>
                  <%= f.text_field :first_name, class: "form-control" %>
                </div>
                <div class="col-md-3 form-group">
                  <%= f.label "Middle Name" %>
                  <%= f.text_field :middle_name, class: "form-control" %>
                </div>
                <div class="col-md-3 form-group">
                  <%= f.label "Last Name" %>
                  <%= f.text_field :last_name, class: "form-control" %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label "Organisation" %>
                <%= f.select(:organisation_id, Organisation.all.collect {|o| [o.name, o.id]}, { prompt: 'Select' }, { class: "form-control" }) %>
              </div>
              <div class="form-group">
                <%= f.label "Email" %>
                <%= f.text_field :email, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label "Qualification" %>
                <%= f.text_field :qualification, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label "Fellow Type" %>
                <%= f.select(:fellow_type_id, FellowType.all.collect {|f| [f.name, f.id]}, { prompt: 'Select' }, { class: "form-control" }) %>
              </div>
              <div class="row">
                <div class="col-md-6 form-group">
                  <%= f.label "Specialty" %>
                  <%= f.select(:specialty_id, Specialty.all.collect {|s| [s.name, s.id]}, { prompt: 'Select' }, { class: "form-control" }) %>
                </div>
                <div class="col-md-6 form-group">
                  <%= f.label "Gender" %>
                  <%= f.select :gender, Doctor::GENDER.invert, { prompt: 'Select' }, { class: "form-control" } %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6 form-group">
                  <%= f.label "Country" %>
                  <%= f.select :country_id, @countries.collect {|c| [c.name, c.id]}, { prompt: 'Select Country' }, { class: "form-control", id: 'countries_select' } %>
                </div>
                <div class="col-md-6 form-group">
                  <%= f.label "City" %>
                  <%= f.select :city_id, @cities.collect {|c| [c.name, c.id]}, { prompt: 'Select City' }, { class: "form-control", id: 'cities_select' } %>
                </div>
              </div>
              <%= f.submit "Update", class: "btn btn-primary" %>
              <button type="reset" class="btn btn-danger">Reset Changes</button>
              <% end %>
            </div>
            <!-- /.col-lg-6 (nested) -->
          </div>
          <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
